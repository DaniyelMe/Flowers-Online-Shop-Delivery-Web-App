        <div class="modal-content">
            <div class="modal-header">
                <button ng-click="cancel()" type="button" class="close" data-dismiss="modal"><span
                            aria-hidden="true">Ã—</span><span
                            class="sr-only">Close</span></button>
                <h4 class="modal-title col-sm-7" id="myModalLabel">Forgot Password</h4>
                <img ng-if="vm.dataLoading"
                     src="data:image/gif;base64,"/>
                <div class="col-sm-12"
                     ng-class="{ 'alert': flash, 'alert-success': flash.type === 'success', 'alert-danger': flash.type === 'error' }"
                     ng-if="flash" ng-bind="flash.message"></div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <h4>Reset Password</h4>
                        <div class="well">
                            <form ng-submit="ok()" name="formA" class="form" role="form">
                                <div class="form-group"
                                     ng-class="{ 'has-error': form.email.$dirty && form.email.$error.required }">
                                    <p>Enter your email address below and we will send you password reset instructions.</p>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        <input type="email" name="email" id="email" class="form-control"
                                               title="Please enter your email"
                                               placeholder=" example@gmail.com"
                                               ng-model="vm.user.email" required/>
                                    </div>
                                    <span ng-show="form.email.$dirty && form.email.$error.required"
                                          class="help-block" style="color:red;">* Email is required</span>
                                </div>
                                <div class="">
                                    <button type="submit" class="btn btn-success btn-block" ng-disabled="form.$invalid">
                                        <i class="fa fa-key"></i> Reset Password
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <p><a class="btn btn-danger"
                      href='' ng-click="login()">Cancel</a></p>
            </div>
        </div>
