<div class="modal-content">
    <div class="modal-header">
        <button ng-click="cancel()" type="button" class="close" data-dismiss="modal"><span
                    aria-hidden="true">Ã—</span><span
                    class="sr-only">Close</span></button>
        <h4 class="modal-title col-sm-7" id="myModalLabel">Register to Flower4u</h4>
        <img ng-if="vm.dataLoading"
             src="data:image/gif;base64,"/>
        <div class="col-sm-12"
             ng-class="{ 'alert': vm.flash, 'alert-success': vm.flash.type === 'success','alert-warning': vm.flash.type === 'warning', 'alert-danger': vm.flash.type === 'error' }"
             ng-if="flash" ng-bind="vm.flash.message"></div>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-sm-7">
                <div class="well">
                    <form ng-submit="vm.ok()" name="formR" class="form" role="form">
                        <div class="form-group">
                            <label title="profile image" class="center-block" for="file-upload"
                                   style=";font-weight: normal; ">
                                <img class="avatar center profile-img-card  img-circle"
                                     src="//ssl.gstatic.com/accounts/ui/avatar_2x.png"
                                     ng-src="{{vm.user.profileImage}}" style="cursor: pointer;"/>
                                <input id="file-upload" ng-model="vm.user.profileImage" type="file"
                                       style="display: none;" file-upload="vm.myFile"
                                       accept="image/*, video/*, audio/*" title="profile image">
                                <div class="input-group">
                                    <span class="input-group-addon" style="cursor: pointer;"><i class="fa fa-image"></i></span>
                                    <input type="text" name="profileImage" id="profileImage" class="form-control" title="Image profile url"
                                           placeholder="Image profile url" ng-model="vm.user.profileImage" required/>
                                </div>
                            </label>
                            <span ng-show="formR.profileImage.$dirty && formR.profileImage.$error.required"
                                  class="help-block" style="color:red;">* Image profile is required</span>
                        </div>
                        <div class="form-group" title="Please enter your first name"
                             ng-class="{ 'has-error': formR.firstName.$dirty && formR.firstName.$error.required }">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input type="text" name="firstName" id="firstName" class="form-control"
                                       placeholder="First name"
                                       ng-model="vm.user.firstName" required/>
                            </div>
                            <span ng-show="formR.firstName.$dirty && formR.firstName.$error.required"
                                  class="help-block" style="color:red;">* First name is required</span>
                        </div>
                        <div class="form-group" title="Please enter your last name"
                             ng-class="{ 'has-error': formR.lastName.$dirty && formR.lastName.$error.required }">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input type="text" name="lastName" id="lastName" class="form-control"
                                       placeholder="Last name"
                                       ng-model="vm.user.lastName" required/>
                            </div>
                            <span ng-show="formR.lastName.$dirty && formR.lastName.$error.required"
                                  class="help-block" style="color:red;">* Last name is required</span>
                        </div>
                        <div class="form-group" title="Please enter your email"
                             ng-class="{ 'has-error': formR.email.$dirty && formR.email.$error.required }">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input type="email" name="email" id="email" class="form-control"
                                       placeholder=" example@gmail.com"
                                       ng-model="vm.user.email" required/>
                            </div>
                            <span ng-show="formR.email.$dirty && formR.email.$error.required"
                                  class="help-block" style="color:red;">* Email is required</span>
                        </div>
                        <div class="form-group" title="Please enter your username"
                             ng-class="{ 'has-error': formR.username.$dirty && formR.username.$error.required }">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input type="text" name="username" id="usernameR" class="form-control"
                                       placeholder="username"
                                       ng-model="vm.user.username" required/>
                            </div>
                            <span ng-show="formR.username.$dirty && formR.username.$error.required"
                                  class="help-block" style="color:red;">* Username is required</span>
                        </div>
                        <div class="form-group" title="Please enter password"
                             ng-class="{ 'has-error': formR.password.$dirty && formR.password.$error.required }">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                <input type="password" name="password" id="passwordR" class="form-control"
                                       placeholder="********"
                                       ng-model="vm.user.password" required/>
                            </div>
                            <span ng-show="formR.password.$dirty && formR.password.$error.required"
                                  class="help-block" style="color:red;">* Password is required</span>
                        </div>
                        <div class="form-group" title="Please confirm the password"
                             ng-class="{ 'has-error': formR.password.$dirty && formR.password.$error.required }">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                <input type="password" name="ConfirmPassword" id="ConfirmPassword"
                                       class="form-control"
                                       placeholder="Confirm Password"
                                       ng-model="vm.user.confirmPassword" required/>
                            </div>
                            <span ng-show="formR.ConfirmPassword.$dirty && formR.ConfirmPassword.$error.required"
                                  class="help-block" style="color:red;">* Password is required</span>
                        </div>
                        <div class="">
                            <!--<button type="submit" class="btn btn-success btn-block" ng-disabled="formR.$invalid">-->
                            <button type="submit" class="btn btn-success btn-block">
                                Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-5">
                <h4>Register now for FREE</h4>
                <ul class="list-unstyled" style="line-height: 2">
                    <li><span class="fa fa-check text-success"></span> See all your orders</li>
                    <li><span class="fa fa-check text-success"></span> Save your favorites</li>
                    <li><span class="fa fa-check text-success"></span> Fast checkout</li>
                    <li><span class="fa fa-check text-success"></span> Get a gift
                    </li>
                    <li><a class="modal-close" data-dismiss="modal" href=""
                           onclick="window.location='#!/about'"><u>Read
                                more</u></a></li>
                </ul>
                <h5>Already have an account?</h5>
                <p><a class="btn btn-info btn-block"
                      href='' ng-click="login()">Login</a></p>
                <h4>or</h4>
                <button onclick="location=''" data-dismiss="modal" class="btn btn-primary btn-block">
                    <i style="font-size:20px;" class="fa fa-linkedin-square"></i>
                    <span class="hidden-xs">&nbsp&nbsp&nbsp&nbspLog in with Linkedin</span>
                </button>
                <br>
                <!--<h4>or</h4>-->
                <button onclick="location=''" data-dismiss="modal" class="btn btn-danger btn-block">
                    <i style="font-size:20px;" class="fa fa-google-plus-square"></i>
                    <span class="hidden-xs">&nbsp&nbsp&nbsp&nbspLog in with Google+</span>
                </button>
            </div>
        </div>
    </div>
</div>
