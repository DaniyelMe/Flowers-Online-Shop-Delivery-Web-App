<style>
    a {
        cursor: pointer;
    }

    ul {
        list-style: none;
    }

    ul li {
        cursor: pointer;
        color: #2c5a7c;
    }

    ul li:hover {
        opacity: 0.5;
    }

    h1 {
        font-size: 22px;
    }

    h4 {
        font-size: 14px;
    }

    .profile-img-card1 {
        border: 10px solid transparent;
        margin-bottom: 15px;
        width: 80px;
        height: 80px;
        opacity: 0.7;
    }

    .profile-img-card1:hover {
        border-color: #f1f1f1;
        /*width: 190px;*/
    }

</style>
<div class="row">
    <% if(user && user.role === 'Admin') { %>
    <div class="col-sm-3">
        <div class="panel panel-info">
            <div class="panel-heading clearfix" style="height: 50px;">
                <H4>New User</H4>
            </div>
            <div class="panel-body" style="height: 300px;">
                <img ng-click="addUser()" class="profile-img-card1"
                     style="margin-top:55px; height: 180px; width: 180px;"
                     src="data:image/png;base64,"/>
            </div>
            <div class="panel-footer clearfix" style="height: 50px;">
            </div>
        </div>
    </div>
    <% } %>
    <div class="col-sm-3" ng-repeat="u in vm.users">
        <div class="panel panel-info">
            <div class="panel-heading" style="height: 50px;">{{u.username}}
                <% if(user && user.role === 'Admin') { %>
                <div class="pull-right" style="color: #E9DB70 !important;">
                    <a href="" ng-if="u.isActive" ng-click="deleteUser(u)">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                    <a href="" ng-click="editUser(u)">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </div>
                <% } %>
            </div>
            <div class="panel-body" style="height: 300px;">
                <img class="profile-img-card"
                     src="//ssl.gstatic.com/accounts/ui/avatar_2x.png"
                     ng-src="{{u.profileImage}}"/>
                <p>First name: {{u.firstName}}</p>
                <p>Last name: {{u.lastName}}</p>
                <% if(user && user.role === 'Admin') { %>
                <p>role: {{u.role}}</p>
                <label class="checkbox-inline"><input type="checkbox" disabled ng-model="u.isActive">
                    is active</label><br>
                <label class="checkbox-inline"><input type="checkbox" disabled ng-model="u.activated">
                    activated</label>
                <% } %>
            </div>
            <div class="panel-footer" style="height: 50px;">
                <div id="{{u.name}}" class="">
                    <p>email: <a href="" ng-click="sendEmail(u)">{{u.email}}</a></p>
                </div>
            </div>
        </div>
    </div>
</div>